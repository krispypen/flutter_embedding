<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flutter Embedding Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Theme Mode:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/theme_mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />


    <Button
        android:id="@+id/start_engine_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Flutter Engine"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/stop_engine_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Flutter Engine"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/start_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Flutter Screen"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/start_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Flutter in View"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/remove_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Flutter View"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/update_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Theme Mode"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:id="@+id/flutter_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0" />

</LinearLayout>
