<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Tab Layout for small screens -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        android:visibility="gone" />

    <!-- Container that will hold either side-by-side or tabbed content -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Settings Panel -->
        <ScrollView
            android:id="@+id/settings_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{{flutterEmbeddingName}} Demo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/start_engine_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="startEngine"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/stop_engine_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="stopEngine"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/start_screen_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="startScreen"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/start_view_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="startFlutterInView"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/remove_view_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="removeFlutterView"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />

                <{{exampleAndroidPackageName}}.CommunicationView
                    android:id="@+id/communication_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </ScrollView>

        <!-- Flutter Container Panel -->
        <FrameLayout
            android:id="@+id/flutter_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f0f0f0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Flutter container area"
                android:textSize="18sp"
                android:textColor="#666666"
                android:gravity="center" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
